@inherits LayoutComponentBase

<div class="page" style="background-color: #0a0a0a;">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main style="background-color: #0a0a0a;">
        <article class="content px-4" style="background-color: #0a0a0a; color: #d0d0d0;">
            @Body
        </article>

        <footer class="text-center py-3 border-top" style="background-color: #1a1a1a; border-color: #3a1010 !important; color: #808080; margin-top: 2rem;">
            <small>Fatal Attraction game developed by Jim Byer & Jon Worthington — the masterminds behind the mystery!</small>
        </footer>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
